<div class="container">
<% if @users.empty? %>
  <p>There are no users; passwordless authentication will not work.</p>
<% else %>
  <%= form_tag :passwordless_login_post, method: :post do %>
    <p>New and Improved Passwordless Login.</p>
    <label>
      Username:
      <div class="form-group">
        <%= select_tag 'user-select', options_from_collection_for_select(@users, 'id', 'username'), class: 'form-control custom-select' %>
    </label>
      </div>
      <div class="form-group">
        <%= submit_tag 'Auth by Email', class: 'btn btn-primary form-control' %>
      </div>
  <% end %>
<% end %>
</div>
