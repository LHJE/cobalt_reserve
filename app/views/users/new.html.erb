<%= form_tag "/users", method: :post do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>

  <%= label_tag :password %>
  <%= text_field_tag :password %>

  <%= label_tag :first_name %>
  <%= text_field_tag :first_name %>

  <%= label_tag :last_name %>
  <%= text_field_tag :last_name %>

  <%= label_tag :email %>
  <%= text_field_tag :email %>
  <%= submit_tag 'Create User' %>
<% end %>

